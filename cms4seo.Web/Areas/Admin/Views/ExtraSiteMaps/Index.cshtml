@model IEnumerable<ExtraSiteMap>


<!-- see-admin.js for script vertify del ====================== -->
@AntiForgery.GetHtml()
<div class="card">
    <div class="card-header">
        <span class="h3">@AdminResources.CommonExtraSitemap / @AdminResources.CommonIndex</span>
        <span class="float-right">
            @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new { @class = "btn btn-outline-secondary btn-sm" })
        </span>
    </div>
    <!-- /.panel-heading -->
    <div class="card-body table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-adv">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastMod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ChangeFreq)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Priority)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Name, "Edit", new { item.Id })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastMod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChangeFreq)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                        <td>
                            <!-- js-del-vertify =====================================================-->
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new
                       {
                           data_action = "delete",
                           data_value = item.Name,
                           data_id = item.Id,
                           @class = "btn btn-danger btn-xs"
                       })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new { @class = "btn btn-outline-secondary" })
    </div>
</div>
