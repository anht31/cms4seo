@model IEnumerable<Contact>


<!-- see-admin.js for script verify del ====================== -->
@AntiForgery.GetHtml()
<div class="card">
    <div class="card-header">
        <span class="h3">@AdminResources.CommonMessage / @AdminResources.CommonIndex</span>
    </div>
    <!-- /.panel-heading -->
    <div class="card-body table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-adv">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReadBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message)
                </th>
                <th>
                </th>
            </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        
                        @if(String.IsNullOrWhiteSpace(item.ReadBy))
                        {
                            <a href="@Url.Action("MarkAsRead", new { item.Id})" class="btn btn-outline-success"><i class="fas fa-envelope-open">&nbsp;</i>@AdminResources.MarkAsRead</a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.ReadBy)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        <!-- js-del-vertify =====================================================-->
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new
                        {
                            data_action = "delete",
                            data_value = item.FullName,
                            data_id = item.Id,
                            @class = "btn btn-danger btn-xs"
                        })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        @*@Html.ActionLink(AdminResources.CommonCreate, "Create", null, new {@class = "btn btn-success"})*@
    </div>
</div>