
@model IEnumerable<Article>

@{
    ViewBag.Title = "Index";
}

@*<div>
    @Html.ActionLink("Inject Hyperlinks All", "Index", null, new { @class = "btn btn-info" })
</div>
<br/>*@


@AntiForgery.GetHtml()
<div class="card">
    <div class="card-header">
        <span class="h3">@AdminResources.CommonInjectionLink / @AdminResources.CommonIndex</span>
        <span class="float-right">
            
        </span>
    </div>
    <!-- /.panel-heading -->
    <div class="card-body table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-adv">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Topic.Name)
                    </th>
                    <th>
                        @AdminResources.InjectionHyperlinks_Index_Insert
                    </th>
                    <th>
                        @AdminResources.InjectionHyperlinks_Index_ClearAll
                    </th>
                    <th>
                        <b>@AdminResources.InjectionHyperlinks_Index_Href</b>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sort)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsPublish)
                    </th>
    
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Topic.Name)
                        </td>
                        <td>
                            @Html.ActionLink(AdminResources.Index_cshtmlExecute_Inject_Hyperlinks_Now, 
                                "Inject", new {item.Id}, new {@class = "btn btn-warning"})
                        </td>

                        <td>
                            @Html.ActionLink(AdminResources.Index_cshtmlExecute_Clear_All_links, 
                                "ClearAllLink", new { item.Id }, new { @class = "btn btn-danger" })
                        </td>

                        <td>
                            /bai-viet/@item.Slug
                        </td>

                        <td>
                            @item.Description.ShortenText50()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sort)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsPublish)
                        </td>            
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
    </div>
</div>