
@model cms4seo.Data.IdentityModels.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}

<section id="loginForm">

    @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-signin", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <div class="card login-card ">
            <div class="card-header font-weight-bold">
                @ViewBag.Title
            </div>

            <div class="card-body">

                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                @Html.LabelFor(m => m.Email, new {@class = "sr-only"})
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control",
                    placeholder = AdminResources.Account_Login_EmailPlaceholder})
                @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})


                @Html.LabelFor(m => m.Password, new {@class = "sr-only"})
                @Html.PasswordFor(m => m.Password, new {@class = "form-control",
                    placeholder = AdminResources.Account_Login_PasswordPlaceholder})
                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})

                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    <span>@AdminResources.Account_Login_RememberMe</span>
                </div>

                <input type="submit" value="Log in" class="btn btn-lg btn-primary btn-block"/>

                <div class="mt-3">
                    @Html.ActionLink(AdminResources.Account_Login_Register, "Register")
                </div>
                <div class="mt-1">
                    @Html.ActionLink(AdminResources.Account_Login_ForgotPassword, "ForgotPassword")
                </div>
            </div>
        </div>
    }
    
