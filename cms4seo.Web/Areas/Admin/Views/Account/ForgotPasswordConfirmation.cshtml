@{
    ViewBag.Title = AdminResources.ForgotPasswordConfirmation_cshtmlExecute_Forgot_Password_Confirmation;
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div>
    <p>
        Please check your email to reset your password.
    </p>
    <p class="text-danger">
        @ViewBag.Message
        @*<br/>
        For DEMO only: You can click this link to reset password: <a href="@ViewBag.Link">link</a>
        Please change this code to register an email service in IdentityConfig to send an email.*@
    </p>
</div>