@model IEnumerable<Permalink>

@{
    ViewBag.Title = AdminResources.CommonIndex;
}

<h2>Index</h2>

<p>
    @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new {@class="btn btn-success"})
</p>
<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LanguageId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntityId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.LanguageId)
                </td>
                <td>
                    @Html.ActionLink(AdminResources.CommonEdit, "Edit", new {id = item.Id}) |
                    @Html.ActionLink(AdminResources.CommonDetails, "Details", new {id = item.Id}) |
                    @Html.ActionLink(AdminResources.CommonDelete, "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
</div>
