@model IEnumerable<Slider>


<!-- see-admin.js for script vertify del ====================== -->
@AntiForgery.GetHtml()
<div class="card">
    <div class="card-header">
        <span class="h3">@AdminResources.CommonSlider / @AdminResources.CommonIndex</span>
        <span class="float-right">
            @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new {@class = "btn btn-success btn-sm"})
        </span>
    </div>
    <!-- /.panel-heading -->
    <div class="card-body table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-adv">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sort)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Text1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text3)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Href)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Avatar)
                </th>

                <th>
                </th>
            </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sort)
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new {item.Id})
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Text1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text3)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Href)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Avatar)
                    </td>


                    <td>
                        <!-- js-del-vertify =====================================================-->
                        @Html.ActionLink("Delete", "Delete", new {deleteId = item.Id}, new
                        {
                            data_action = "delete",
                            data_value = item.Alt,
                            data_id = item.Id,
                            @class = "btn btn-danger btn-xs"
                        })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new {@class = "btn btn-success"})
    </div>
</div>