@model IEnumerable<cms4seo.Data.IdentityModels.ApplicationRole>

@{
    ViewBag.Title = AdminResources.CommonIndex;
}

<h2>Index</h2>

@if (User.IsInRole("Advance.Developer"))
{
    <p>
        @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new { @class = "btn btn-outline-secondary" })
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.IsInRole("Advance.Developer"))
                {
                    <span>
                        @Html.ActionLink(AdminResources.CommonEdit, "Edit", new {id = item.Id}) |
                        @Html.ActionLink(AdminResources.CommonDetails, "Details", new {id = item.Id}) |
                        @Html.ActionLink(AdminResources.CommonDelete, "Delete", new {id = item.Id})
                    </span>
                }
                
            </td>
        </tr>
    }

</table>