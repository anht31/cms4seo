@model IEnumerable<Photo>

@{
    ViewBag.Title = AdminResources.CommonIndex;
    //Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    var docExtension = new List<string>() { ".doc", ".docx", ".pdf", ".xls", ".xlsx", ".ppt", ".pptx", ".rar", ".zip" };
}



<!-- see-admin.js for script verify del ====================== -->
@AntiForgery.GetHtml()
<div class="card">
    <div class="card-header">
        <span class="h3">@AdminResources.CommonPhoto / @AdminResources.CommonIndex</span>
        <span class="float-right">
            @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new { @class="btn btn-outline-secondary btn-sm"})
        </span>
    </div>
    <!-- /.panel-heading -->
    <div class="card-body table-responsive">
		<table class="table table-striped table-bordered table-hover" id="dataTables-adv">
			<thead>		            
            <tr>
                <th>
                    
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MimeType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Entity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModelId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AltAttribute)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TitleAttribute)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LgPath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MdPath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SmPath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostBy)
                </th>
                @*<th>
						@Html.DisplayNameFor(model => model.Sort)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Status)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ProcessingBy)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ScopeId)
					</th>*@
                <th>
                </th>
            </tr>
			</thead>

			<tbody>
			@foreach (var item in Model) {
			    <tr>
                    <td>
                        @if (item.MimeType == ".mp4")
                        {
                            <img src="/Areas/Admin/Assets/photoScope/image/mp4-flat.png" width="120" />
                        }
                        else if (docExtension.Contains(item.MimeType))
                        {
                            <img src="/Areas/Admin/Assets/photoScope/image/doc-icon.jpg" width="120" />
                        }
                        else
                        {
                            <img src="@item.SmPath" width="120">
                        }
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new {item.Id})
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MimeType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModelId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AltAttribute)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TitleAttribute)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LgPath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MdPath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SmPath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostBy)
                    </td>
                    @*<td>
						@Html.DisplayFor(modelItem => item.Sort)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ProcessingBy)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ScopeId)
					</td>*@
                    <td>
                        <!-- js-del-vertify =====================================================-->
                        @Html.ActionLink(AdminResources.CommonDelete, "Delete", new {id = item.Id}, new
                        {
                            data_action = "delete",
                            data_value = item.Name,
                            data_id = item.Id,
                            @class = "btn btn-danger btn-xs"
                        })
                    </td>
                </tr>
			}
			</tbody>
		</table>
	</div>
	<div class="card-footer">
        @Html.ActionLink(AdminResources.CommonCreate, "Create", null, new { @class = "btn btn-outline-secondary" })
    </div>
</div>
