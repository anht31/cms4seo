
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Product>


@{
    ViewBag.Title = ViewBag.Tag;
    ViewBag.NoIndex = "1";
}

<div class="mb-5">


    @Html.Partial("_BreadcrumbInfo", (string)ViewBag.Tag)


    <div class="row mt-3">


        @foreach (var item in Model)
        {
            @Html.Partial("_CardProduct", item)
        }

    </div>



    <!-- pagelist ==========================================================================-->
    <div class="right">
        @Html.PagedListPager(Model, page => Url.Action("ListBy", "ProductTags", new { slug = ViewBag.Slug, page }))
    </div>


</div>
