
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Article>


@{
    var theme = Setting.WebSettings[WebSettingType.CurrentTheme];
    Layout = "~/Themes/" + theme + "/Views/Shared/_LayoutArticle.cshtml";

    ViewBag.PageHeader = "Result for tag: [" + ViewBag.Tag + "]";
    ViewBag.NoIndex = "1";
}



@foreach (var item in Model)
{
    @Html.Partial("_CardArticle", item)
}


<!-- PagerList -->
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, size = 10 }))


