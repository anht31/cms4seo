
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Article>


@{
    ViewBag.Title = ViewBag.Tag;
    ViewBag.PageHeader = "tag: " + ViewBag.Tag;
    ViewBag.NoIndex = "1";
}

<div class="mb-5">


    @*@Html.Partial("_BreadcrumbInfo", (string)ViewBag.Tag)*@


    <div class="mb-3 mt-3">


        @foreach (var item in Model)
        {
            @Html.Partial("_CardArticle", item)
        }

    </div>



    <!-- pagelist ==========================================================================-->
    <div class="right">
        @Html.PagedListPager(Model, page => Url.Action("ListBy", "ArticleTags", new { slug = ViewBag.Slug, page }))
    </div>


</div>
