
@model IEnumerable<Category>


@foreach (var category in Model)
{

    <ul class="breadcrumb-style-1">
        <li>
            <h1 class="font-weight-bold" style="padding: 28px 40px">
                @category.Name
            </h1>
        </li>
    </ul>


    <div class="row mt-3">
        @foreach (var item in category.GetAllChildProduct().Take(30))
        {
            @Html.Partial("_CardProduct", item)
        }
    </div>
}